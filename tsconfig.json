{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "sourceMap": true,
    "module": "esnext",
    "target": "es6",
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "skipLibCheck": true,
    "jsx": "react",
    "paths": { "~/*": ["src/*"] },
    "typeRoots": [
      "node_modules/@types",
      "./src/typings"
    ],
    "noImplicitAny": true,
    "noImplicitThis": false,
    "noEmitOnError": false,
    "removeComments": false,
    "alwaysStrict": false,
    "strictNullChecks": true,
    "declaration": false,
    "downlevelIteration": false,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*",
    "./declaration.d.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
